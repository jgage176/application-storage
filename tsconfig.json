{
    "compileOnSave": true,
    "compilerOptions": {
      "baseUrl": ".",
      "declaration": true,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "inlineSources": true,
      "jsx": "react",
      "lib": ["dom", "es2017"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "outDir": "dist",
      "removeComments": true,
      "rootDir": "src",
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "target": "es5",
      "typeRoots": ["node_modules/@types", "custom_typings"]
    },
    "exclude": [
      "build",
      "dist",
      "config",
      "node_modules",
      "public",
      "__tests__",
      "testSetup",
      "scripts",
      "src/setupTests.ts",
      "server.js"
    ],
    "files": [
        "src\\index.ts"
    ]
  }